{
  "name": "delivery-platform",
  "version": "1.0.0",
  "description": "고객, 배달 기사, 점주를 연결하는 종합적인 배달 플랫폼",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "packageManager": "yarn@4.0.0",
  "scripts": {
    "dev:web": "cd apps/web && yarn dev",
    "dev:mobile": "cd apps/mobile && yarn start",
    "dev:api": "cd apps/api && yarn start:dev",
    "build:web": "cd apps/web && yarn build",
    "build:mobile": "cd apps/mobile && yarn build",
    "build:api": "cd apps/api && yarn build",
    "test": "yarn workspaces foreach --parallel run test",
    "lint": "yarn workspaces foreach --parallel run lint",
    "lint:fix": "yarn workspaces foreach --parallel run lint:fix",
    "type-check": "yarn workspaces foreach --parallel run type-check",
    "clean": "yarn workspaces foreach --parallel run clean && rm -rf node_modules",
    "supabase:test": "node tools/scripts/test-supabase.js",
    "schema:apply": "node tools/scripts/apply-schema.js",
    "schema:check": "node tools/scripts/apply-schema.js",
    "db:test": "node tools/scripts/test-database.js",
    "db:seed": "node tools/scripts/test-database.js",
    "db:test-simple": "node tools/scripts/test-database-simple.js",
    "build": "turbo run build",
    "dev": "turbo run dev",
    "lint:root": "eslint . --fix",
    "test:watch": "turbo run test:watch",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,json,md}\"",
    "format:check": "prettier --check \"**/*.{ts,tsx,js,jsx,json,md}\"",
    "prepare": "husky install",
    "docker:start": "tools/docker/docker-dev.sh start",
    "docker:stop": "tools/docker/docker-dev.sh stop",
    "docker:restart": "tools/docker/docker-dev.sh restart",
    "docker:status": "tools/docker/docker-dev.sh status",
    "docker:logs": "tools/docker/docker-dev.sh logs",
    "docker:test": "tools/docker/docker-dev.sh test",
    "docker:clean": "tools/docker/docker-dev.sh clean",
    "docker:dev": "tools/docker/docker-dev.sh start --clean",
    "test:env": "node -e \"console.log('Environment check passed')\"",
    "setup:check": "yarn install && yarn type-check && yarn supabase:test"
  },
  "devDependencies": {
    "@eslint/js": "^9.28.0",
    "@supabase/supabase-js": "^2.38.0",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "dotenv": "^16.3.1",
    "eslint": "^8.50.0",
    "eslint-config-next": "^14.0.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-react": "^7.33.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "husky": "^8.0.3",
    "lint-staged": "^15.0.0",
    "prettier": "^3.0.0",
    "turbo": "^1.10.0",
    "typescript": "^5.2.0"
  },
  "engines": {
    "node": ">=18.0.0",
    "yarn": ">=4.0.0"
  },
  "lint-staged": {
    "*.{ts,tsx,js,jsx}": [
      "prettier --write",
      "eslint --fix"
    ],
    "*.{json,md}": [
      "prettier --write"
    ]
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/your-org/delivery-platform.git"
  },
  "keywords": [
    "delivery",
    "platform",
    "monorepo",
    "nextjs",
    "expo",
    "nestjs",
    "typescript"
  ],
  "author": "Delivery Platform Team",
  "license": "MIT",
  "dependencies": {
    "@nestjs/platform-socket.io": "^11.1.3",
    "@nestjs/websockets": "^11.1.3",
    "axios": "^1.9.0",
    "socket.io": "^4.8.1"
  }
}
